<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/menuImg"
        android:src="@drawable/ic_hamburger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        app:layout_constraintStart_toEndOf="@id/menuImg"
        app:layout_constraintEnd_toStartOf="@id/descImg"
        app:layout_constraintTop_toTopOf="@id/menuImg"
        app:layout_constraintBottom_toBottomOf="@id/menuImg"
        android:id="@+id/stockBitImt"
        android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <ImageView
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/descImg"
        android:src="@drawable/ic_desc"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>